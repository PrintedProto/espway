<pid-sliders>
    <slider id='pslider' label='P' bound-min={ opts.pMin } bound-max={ opts.pMax } my-value={ opts.pValue }></slider>
    <slider id='islider' label='I' bound-min={ opts.iMin } bound-max={ opts.iMax } my-value={ opts.iValue }></slider>
    <slider id='dslider' label='D' bound-min={ opts.dMin } bound-max={ opts.dMax } my-value={ opts.dValue }></slider>
</pid-sliders>

